{% extends "base.html.twig" %}
{% block body %}
    <a href="{{url("admin.createPost")}}" class="btn btn-success btn-block p-3">Create</a>
	<table class="table table-striped mt-5 ">
		<thead>
			<tr>
				<td>ID</td>
				<td>Title</td>
				<td class="text-right">Actions</td>
			</tr>
		</thead>
        <tbody>
		{% for post in posts %}
			<tr>
				<td>{{post.id}}</td>
				<td>{{post.title}}</td>
				<td class="text-right">
					<a class="btn btn-danger" href="{{url("admin.deletePost", {id:post.id})}}">Delete</a>
				</td>
			</tr>
		{% endfor %}
        </tbody>
	</table>
{% endblock %}
